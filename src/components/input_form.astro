---
import "../styles/components/input_form.css"
const {placeholder, label, error, id} = Astro.props;
---
<div class="input_container">
    <label for="input">{label}</label>
    <input id={id} type="text" placeholder={placeholder}>
    <p class={`hidden ${error ? '' : 'visible'}`}>{error}</p>
</div>
  