        error="please enter your password"
        label="Password:"
    />   

    <InputForm 
        placeholder="password"
        error="password should be the same xd"
        label="Confirm Password:"
    />

    <DateBirthSelect
        text="fecha de nacimiento: "
    />

    <IconButtonForm
